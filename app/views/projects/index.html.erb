<h1>Listing projects</h1>

<table>
<% @projects.each do |project| %>
  <tr class="<%= cycle('odd','even') %>">
	<td>
	<%= link_to(project) do %>	
		<%= image_tag(project.image_url, class: 'project_thumbnail') %> 
	<% end %>
  	</td>
	
	<td class="project_info">
	<%= link_to(project) do %>
		<h2><%= project.title %></h2>
		<p><%= project.description %></p>
		<p><%= project.id %></p>
	<% end %>
    </td>
	
    <td class='project_actions'>
		<%= link_to 'Edit', edit_project_path(project) %>
    	<%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%= Favourite.where(:project_id => project.id).count %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path %>
